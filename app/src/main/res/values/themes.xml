<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyQuizProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_app_color</item>
        <item name="colorPrimaryVariant">@color/blue_app_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/blue_app_color</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mulish</item>
    </style>

    <style name="TextViewStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/mulish</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">75dp</item>
    </style>
</resources>